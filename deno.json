{
    "lint": {
        "files": {
            "include": ["src/"]
        },
        "rules": {
            "tags": ["recommended"]
        }
    },
    "fmt": {
        "files": {
            "include": ["src/"]
        },
        "options": {
            "useTabs": false,
            "lineWidth": 140,
            "indentWidth": 4,
            "singleQuote": true,
            "proseWrap": "preserve"
        }
    }
}
